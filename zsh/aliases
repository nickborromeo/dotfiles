# Handle the fact that this file will be used with multiple OSs
platform=`uname`
if [[ $platform == 'Linux' ]]; then
  alias a='ls -lrth --color'
elif [[ $platform == 'Darwin' ]]; then
  alias a='ls -lrthG'
fi

# zsh
alias vim="stty stop '' -ixoff ; vim"
# # `Frozing' tty, so after any command terminal settings will be restored
ttyctl -f

alias zshconfig="vim ~/.dotfiles/zshrc"
alias vimconfig="vim ~/.dotfiles/vimrc"
alias gvimconfig="vim ~/.dotfiles/gvimrc"
#alias ohmyzsh="vim ~/.oh-my-zsh"
alias tmux="TERM=screen-256color-bce tmux"

#Unix commands
alias ll='ls -lah'

alias aliases='vim ~/.dotfiles/zsh/aliases'
alias amend="git commit --amend"
alias be='bundle exec'
alias be='bundle exec'
alias bi='bundle install'
alias bu='bundle update'
alias ctags="`brew --prefix`/bin/ctags"
alias dev='cd ~/Development'
alias dot='cd ~/.dotfiles'
alias ga='git add'
alias gad='git add .'
alias gadu='git add -u .'
alias gc='git commit'
alias gca='git commit -a'
alias gcaa='git commit -a --amend -C HEAD'
alias gcl='git clone'
alias gcm='git commit -m'
alias gco='git checkout'
alias gcv='git commit -v'
alias gd='git diff'
alias gdc='git diff --cached'
alias get='sudo apt-get install'
alias git=hub
alias gl='glog --graph'
alias glog='git log --date-order --pretty="format:%C(yellow)%h%Cblue%d%Creset %s %C(white) %an, %ar%Creset"'
alias gpr='git pull --rebase'
alias gpush='git push'
alias grc='git rebase --continue'
alias gs='git status -sb'
alias guf='git fetch upstream && git merge upstream/master'
alias gvd='git difftool'
alias hpush='git push heroku'
alias irb='irb --readline -r irb/completion'
alias minted-aliases='vim ~/.dotfiles/zsh/minted-aliases'
alias rc='rails console'
alias rdm="be rake db:migrate"
alias rdtp="be rake db:test:prepare"
alias restart_apache="sudo /etc/init.d/apache2 restart"
alias restart_postgres="stoppostgres && startpostgres"
alias space='du -sk * | sort -rn | head'
alias startpostgres='pg_ctl -D /usr/local/var/postgres -l /usr/local/var/postgres/server.log start'
alias stoppostgres='pg_ctl -D /usr/local/var/postgres -l /usr/local/var/postgres/server.log stop'

# Vagrant
alias vup='vagrant up'
alias vh='vagrant halt'
alias vssh='vagrant ssh'

#tmux
alias tmuxconfig="vim ~/.dotfiles/tmux.conf"
alias tat="tmux attach-session -t "
alias tls="tmux list-sessions"
alias tst="tmux switch -t "

